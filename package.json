{
  "name": "app",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "latest",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.9",
      "@trpc/client": "^11.7.2",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @app/db db:push",
    "db:studio": "turbo -F @app/db db:studio",
    "db:generate": "turbo -F @app/db db:generate",
    "db:migrate": "turbo -F @app/db db:migrate",
    "db:local": "turbo -F @app/db db:local"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@app/env": "workspace:*"
  },
  "devDependencies": {
    "@app/config": "workspace:*",
    "@types/bun": "catalog:",
    "concurrently": "^9.2.1",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.4"
}
